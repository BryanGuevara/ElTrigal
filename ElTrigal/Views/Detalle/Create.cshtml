@model ElTrigal.Models.Detalle

@{
    Layout = null;
    ViewData["Title"] = "Crear";
}
@if (RoleContext.CurrentRole != null && (!RoleContext.CurrentRole.EditVentas || !RoleContext.CurrentRole.CrearVentas))
{
    <script>window.location.href = '@Url.Action("Index", "Home")';</script>
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/cotizacion.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h1>Añadir a la Venta</h1>
    <h4>Detalle</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="PerteneceId" type="hidden" value="@ViewBag.PerteneceId" />

                <div class="form-group">
                    <label asp-for="ProductoId" class="control-label">Producto</label>
                    <select asp-for="ProductoId" class="form-control" asp-items="@(ViewData["ProductoId"] as SelectList)"></select>
                    <span asp-validation-for="ProductoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descuento" class="control-label">Cantidad</label>
                    <input asp-for="Descuento" class="form-control" />
                    <span asp-validation-for="Descuento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewData["ProductoId"]!=null)
    {
    <div>
        <a asp-action="Index" asp-route-perteneceId="@ViewBag.PerteneceId" class="btn btn-secondary">Volver a la Lista</a>
    </div>
    }
    else
    {
        <div>
            <a asp-action="Index" asp-controller="Venta" class="btn btn-secondary">Volver a la Lista de Venta</a>
        </div>
    }
</body>
</html>
