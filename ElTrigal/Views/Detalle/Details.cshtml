@model ElTrigal.Models.Detalle

@{
    Layout = null;
    ViewData["Title"] = "Detalles";
}
@if (RoleContext.CurrentRole != null && (!RoleContext.CurrentRole.EditVentas || !RoleContext.CurrentRole.CrearVentas))
{
    <script>window.location.href = '@Url.Action("Index", "Home")';</script>
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/cotizacion.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h1>Detalles</h1>

    <div>
        <h4>Codigo de la Cotización: @Html.DisplayFor(model => model.PerteneceId)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descuento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descuento)
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-editar">Editar</a>
        <a asp-action="Index" asp-route-perteneceId="@Model.PerteneceId" class="btn btn-secondary">Regresar al Listado</a>
    </div>

</body>
</html>
