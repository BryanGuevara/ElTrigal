@model IEnumerable<ElTrigal.Models.Cotizacion>

@{
    Layout = null;
    ViewData["Title"] = "Cotizaciones";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/cotizacion.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h1>Cotizaciones</h1>

    <p>
        <a asp-action="Create" class="btn-primary">Nueva Cotización</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="editar">Editar</a> 
                        <a asp-action="Details" asp-route-id="@item.Id" class="ver">Ver</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="borrar">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
