@{
    Layout = null;
    ViewData["Title"] = "Detalle";
}

<link rel="stylesheet" href="~/css/cotizacion.css">

<h2>Detalle</h2>

<form asp-action="AgregarProducto" method="post">
    <input type="hidden" name="CotizacionId" value="@ViewBag.CotizacionId" />

    <div class="form-group">
        <label for="ProductoId">Producto:</label>
        <select name="ProductoId" asp-items="@ViewBag.Productos"></select>
    </div>

    <div class="form-group">
        <label for="Cantidad">Cantidad:</label>
        <input type="number" name="Cantidad" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Agregar Producto</button>
    <a asp-action="Edit" asp-route-id="@ViewBag.CotizacionId" class="btn btn-secondary">Cancelar</a>
</form>
