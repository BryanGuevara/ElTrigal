@{
    Layout = null;
}
@model ElTrigal.Models.Detalle

@{
    ViewData["Title"] = "Editar Producto";
}

<link rel="stylesheet" href="~/css/cotizacion.css">

<h2>Editar Producto</h2>

<form asp-action="GuardarEdicionProducto" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Producto">Producto:</label>
        <input type="text" asp-for="Producto.Nombre" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="Cantidad">Cantidad:</label>
        <input type="number" asp-for="Cantidad" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <button type="button" class="btn btn-danger" onclick="confirmAndSubmit()">Eliminar Producto</button>
        <a asp-action="Edit" asp-route-id="@Model.CotizacionId" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

<script>
    function confirmAndSubmit() {
        if (confirm('¿Estás seguro de eliminar este producto?')) {
            document.forms[0].submit();
        }
    }
</script>
