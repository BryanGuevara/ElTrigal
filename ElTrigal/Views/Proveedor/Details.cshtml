    @if (Model.CobrosTel != null || Model.CobrosCorreo != null)
    {
<h4>Creditos y Cobros</h4>
<table class="table">
    <thead>
        <tr>
                    @if (Model.CobrosTel != null)
                    {
                        <th>Telefono</th>
                    }
                    @if (Model.CobrosCorreo != null)
                    {
                        <th>Correo</th>
                    }
                </tr>
    </thead>
    <tbody>
        <tr>
                    @if (Model.CobrosTel != null)
                    {
                        <td>@Html.DisplayFor(model => model.CobrosTel)</td>
                    }
                    @if (Model.CobrosCorreo != null)
                    {
                        <td>@Html.DisplayFor(model => model.CobrosCorreo)</td>
