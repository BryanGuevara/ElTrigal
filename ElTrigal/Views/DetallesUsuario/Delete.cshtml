@model ElTrigal.Models.Detalle

@{
    Layout = null;
    ViewData["Title"] = "Eliminar";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/cotizacion.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="container mt-4">
        <h1 class="text-danger">Eliminar Detalle</h1>

        <div class="card">
            <div class="card-body">
                <h3 class="card-title">¿Estás seguro de que deseas eliminar esto?</h3>

                <dl class="row">
                    <dt class="col-sm-3">Cantidad:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cantidad)</dd>

                    <dt class="col-sm-3">Producto:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Producto.Nombre)</dd>

                    <dt class="col-sm-3">Cotización:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cotizacion.Id)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="eliminar-form">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Cotizacion.Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>

                <a asp-action="Index" asp-route-cotizacionId="@Model.Cotizacion.Id" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>

</body>
</html>
