@model ElTrigal.Models.Categoria

@{
    ViewData["Title"] = "Eliminar";
    Layout = null;
}

@if (RoleContext.CurrentRole == null || !RoleContext.CurrentRole.EliCategoria)
{
    <script>window.location.href = '@Url.Action("Index", "Home")';</script>
}

<link rel="stylesheet" href="~/css/productos.css">

<h1>Eliminar</h1>

<h3>¿Seguro de querer eliminar esta Categoria?</h3>
<h4>Algunos productos se quedarán sin categoría</h4>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-primary" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
