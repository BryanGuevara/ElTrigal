@model ElTrigal.Models.Venta

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
@if (RoleContext.CurrentRole != null && !RoleContext.CurrentRole.CrearVentas)
{
    <script>window.location.href = '@Url.Action("Index", "Home")';</script>
}

<link rel="stylesheet" href="~/css/cotizacion.css">


<h1>Nueva Venta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">-- Selecciona un cliente --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir Productos" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al Listado</a>
</div>

