@model ElTrigal.Models.Rol

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}
@if (RoleContext.CurrentRole != null && !RoleContext.CurrentRole.EliRol)
{
    <script>window.location.href = '@Url.Action("Index", "Home")';</script>
}

<link rel="stylesheet" href="~/css/personas.css">

<h1>Borrar Rol</h1>

<h3>¿Estas seguro de querer borrar este Rol?</h3>
<h4>Algunos usuarios se quedaran sin Rol</h4>
<div>
    <h4>Rol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-primary" style="width:20%;" />
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
